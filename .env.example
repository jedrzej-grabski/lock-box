# App
ENV=development
APP_HOST=0.0.0.0
APP_PORT=8000
API_PREFIX=/api/v1
FRONTEND_BASE=https://<placeholder>


# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/sdr


# JWT (RS256)
JWT_PRIVATE_KEY_PATH=/run/secrets/jwt_private.pem
JWT_PUBLIC_KEY_PATH=/run/secrets/jwt_public.pem
ACCESS_TOKEN_EXPIRES_MINUTES=15
REFRESH_TOKEN_EXPIRES_DAYS=7
JWT_ALGORITHM=RS256
JWT_ISSUER=securedataroom

INVITE_TOKEN_HMAC_SECRET=change-me

# S3
S3_BUCKET=my-sdr-bucket
S3_REGION=eu-central-1
S3_ACCESS_KEY_ID=change_me
S3_SECRET_ACCESS_KEY=change_me
S3_ENDPOINT_URL= # optional for S3-compatible


# Other
EMAIL_FROM=no-reply@1<placeholder>
EMAIL_VERIFICATION_EXPIRY_HOURS=48


# Security
PASSWORD_HASHING_SCHEME=argon2
